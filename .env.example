# ===================================
# FaceMatch++ Environment Configuration
# ===================================
# Copy this file to .env and update with your actual values

# ==================== Database Configuration ====================
POSTGRES_SERVER=localhost
POSTGRES_USER=facematch_user
POSTGRES_PASSWORD=facematch_password
POSTGRES_DB=facematch_db
POSTGRES_PORT=5432

# ==================== Redis Configuration ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== Email Configuration ====================
# Gmail SMTP Configuration (for notifications)
# IMPORTANT: For Gmail, use App Password, not your regular password
# Steps: Google Account > Security > 2-Step Verification > App Passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=FaceMatch++

# Admin email for notifications
ADMIN_EMAIL=admin@example.com

# ==================== Security ====================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ==================== Root Admin Setup ====================
# Initial admin credentials (used for first-time setup)
ROOT_ADMIN_ID=245816470
ROOT_ADMIN_EMAIL=admin@facematch.com
ROOT_ADMIN_PASSWORD=Admin@123

# ==================== Application Settings ====================
ENVIRONMENT=development
# Options: development, staging, production

# ==================== Face Recognition Settings ====================
DETECTION_BACKEND=retinaface
# Options: retinaface, mtcnn, ssd, opencv

RECOGNITION_MODEL=arcface
# Options: arcface, facenet

MATCHING_THRESHOLD=0.6
# Range: 0.0 to 1.0 (higher = stricter matching)

# ==================== Logging ====================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ==================== Docker Settings ====================
# These are used when running with docker-compose
# If running locally without Docker, use localhost values above
